#!/usr/bin/env bash

# turns github:richo</ruby-fork><:features/hax>
# <> denotes optional elements
# into
# rvm_ruby_repo_url=git://github.com/richo/ruby.git
# rvm_ruby_repo_branch=features/hax
# rvm_
__rvm_parse_github_string()
{
  typeset ruby_repo ruby_branch base
  base="$1"

  ruby_repo=${base#github:}
  ruby_branch=${ruby_repo#*@}
  ruby_repo=${ruby_repo#@*}
}
